import os
import psycopg2

DATABASE_URL = os.popen('heroku config:get DATABASE_URL -a shao-haha').read()[:-1]
conn = psycopg2.connect(DATABASE_URL, sslmode='require')
cursor = conn.cursor()

#創開團表單 group_data
create_table =  '''CREATE TABLE group_data(
           record_no serial PRIMARY KEY,
           activity_type VARCHAR (50),
           activity_name VARCHAR (50),
           activity_date DATE ,
           activity_time TIME ,
           location_tittle VARCHAR (50),
           lat NUMERIC (9, 6) ,
           long NUMERIC (9, 6),
           people INTEGER (50),
           cost INTEGER ,
           due_date DATE ,
           description TEXT,
           photo TEXT,
           name VARCHAR (50),
           phone VARCHAR (10),
           mail VARCHAR (50),
           attendee INTEGER ,
           condition VARCHAR (50),
           user_id VARCHAR (50)
        );'''

cursor.execute(create_table)
conn.commit()

#創報名表單 registration_data
create_table =  '''CREATE TABLE registration_data(
           record_no serial PRIMARY KEY,
           activity_name VARCHAR (50),
           attendee_name VARCHAR (50),
           phone VARCHAR (50),
           mail VARCHAR (50),
           condition VARCHAR (50),
           user_id VARCHAR (50)
        );'''

cursor.execute(create_table)
conn.commit()


cursor.close()
conn.close()
